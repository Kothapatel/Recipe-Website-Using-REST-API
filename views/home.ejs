<!-- my_template.ejs -->
<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>recipe</title>
    <!-- google font -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Pacifico&display=swap" rel="stylesheet">
    <!-- bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ" crossorigin="anonymous">

</head>

<body>
    <!-- header -->
    <%- include('partails/header'); -%>

        <!-- carousel -->
        <section id="title">
            <div id="carouselExampleCaptions" class="carousel slide">
                <div class="carousel-indicators">
                    <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
                    <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="1" aria-label="Slide 2"></button>
                    <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="2" aria-label="Slide 3"></button>
                </div>
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <img src="https://media.gettyimages.com/id/1212329362/photo/table-top-view-of-indian-food.jpg?s=612x612&w=0&k=20&c=qLGeFzjZl10DmzgvF6mi1KAQVXHgCpBqgKaYx9DRzXw=" class="d-block w-100" alt="...">
                        <div class="carousel-caption d-none d-md-block">
                            <h3 class="cartext">Indian Recipe</h3>
                            <button class="btn btn-dark btn-lg" type="submit"> <i class="fa-solid fa-square-up-right"></i> Try-Now</button>
                        </div>
                    </div>
                    <div class="carousel-item">
                        <img src="https://media.gettyimages.com/id/905079230/photo/bowls-with-chicken-beef-and-vegetables-chow-mein-and-rice-with-pork.jpg?s=612x612&w=0&k=20&c=jH4Uv_zXIS_l-lR9SPVnDxnoxfP_vl30s7GXTnKun74=" class="d-block w-100" alt="...">
                        <div class="carousel-caption d-none d-md-block">
                            <h3 class="cartext">Chinese Recipe</h3>
                            <button class="btn btn-dark btn-lg" type="submit"> <i class="fa-solid fa-square-up-right"></i> Try-Now</button>
                        </div>
                    </div>
                    <div class="carousel-item">
                        <img src="https://media.gettyimages.com/id/1220017909/photo/top-view-table-full-of-food.jpg?s=612x612&w=0&k=20&c=UzzJrIttGJbjHoXHRrKNVimV-cBzZmKdvUpJel3g7Ns=" class="d-block w-100" alt="...">
                        <div class="carousel-caption d-none d-md-block">
                            <h3 class="cartext">Italish Recipe</h3>
                            <button class="btn btn-dark btn-lg" type="submit"> <i class="fa-solid fa-square-up-right"></i> Try-Now</button>
                        </div>
                    </div>
                </div>
                <button class="carousel-control-prev icon" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="prev">
              <span class="carousel-control-prev-icon" aria-hidden="true"></span>
              <span class="visually-hidden">Previous</span>
            Back</button>
                <button class="carousel-control-next icon" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="next">
              <span class="carousel-control-next-icon" aria-hidden="true"></span>
              Next<span class="visually-hidden">Next</span>
            </button>
            </div>
            </div>
        </section>
        <!-- recipes -->
        <section id="Post">

            <div class="bg-dark text-secondary px-4 py-5 text-center">
                <h1>
                    <small class="display-5 fw-bold text-white">Popular Recipes For EveryOne</small>
                </h1>
                <!-- javaScript embedded -->
                <%  postedItems.forEach(function(post){ %>
                    <div class="py-5 title">
                        <h1 class="display-5 fw-bold text-white">
                            <%=post.title %>
                        </h1>
                        <div class="col-lg-5>
                            <p class=" fs-4 mb-3 ">
                                <%= post.content.substring(0,180)+"... " %>
                                <a href="post/<%=post.title %>"> Read more</a>

                            </p>

                            <% }); %>

                        </div>
                    </div>
            </div>


        </section>


        <style>
            .recipe {
                padding-left: 250px;
            }
            
            .card {
                border: 25px;
                padding: 50px;
            }
            
            h1 {
                text-align: center;
            }
            
            .slide {
                font-family: 'Pacifico', cursive;
            }
            
            .cartext {
                font-size: 200px;
                color: antiquewhite;
            }
            
            .title {
                padding: 20px;
            }
            
            .content {
                padding: 10px;
            }
        </style>
        <!-- footer -->
        <%- include('partails/footer'); -%>
</body>

</html>